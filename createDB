const database = 'game-of-life';
const collection = 'patterns';

// Create a new database.
use(database);

// Create a new collection.
db.createCollection(collection);

// Create a new index in the collection.
db.getCollection('patterns')
.createIndex(
    {
        name: 1
    }, {
        unique: true
    }
);

db.getCollection('patterns')
.createIndex(
    {
        pattern: "text"
    }, {

    }
);
